  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 00 - Print Markdown",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": ["--cli-markdown"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 00 - Print Help",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": ["--help"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 01 - Empty",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 02 - File (Hello World)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--path",
        "${workspaceFolder}/samples/hello-world/index.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 03 - File (Functions)",
      "skipFiles": ["<node_internals>/**"],
