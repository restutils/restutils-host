      "args": [
        "--path",
        "${workspaceFolder}/samples/nested/index.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CLI 05 - File (Async)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--path",
        "${workspaceFolder}/samples/async/index.js"
